extends layout

block content
	div.container

		form(method='post' action='/store')

				div.container.form-control
					
					div
						label(for='movie_id') IMDB ID: 
						input(type='text', name='movie_id', required) 	 
					
					div
						label(for='title') Title: 
						input(type='text', name='title', required) 	 
					
					div
						label(for='release_year') Release: 
						input(type='text', name='release_year', required) 	 
					
					div
						label(for='rating') Rating: 
						input(type='text', name='rating', required) 	 
					
					div
						label(for='poster') Poster: 
						input(type='text', name='poster', required) 	 
					
					div.form-control 
						button.btn(type='submit') Save Movie